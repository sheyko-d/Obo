<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="@color/gray" />

            <stroke
                android:dashGap="2.5dp"
                android:dashWidth="2.5dp"
                android:width="1dp"
                android:color="@color/green" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>

</layer-list>