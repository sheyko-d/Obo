<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:onClick="product"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/mainFrImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_placeholder"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.1"
            android:background="@drawable/shadow_patch" />

        <ProgressBar
            android:id="@+id/mainFrProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/gray"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="51dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:contentDescription="@null"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp"
            android:src="@drawable/ic_share" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" >

            <com.moysof.obo.typeface.TextRobotoBold
                android:id="@+id/mainFrTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/gray_primary"
                android:textSize="16sp" />

            <com.moysof.obo.typeface.TextRobotoThin
                android:id="@+id/mainFrPriceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_secondary"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp" >

            <com.moysof.obo.typeface.TextRobotoThin
                android:id="@+id/mainFrLocationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/gray_secondary"
                android:textSize="14sp" />

            <com.moysof.obo.typeface.TextRobotoThin
                android:id="@+id/mainFrDistanceTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/gray_secondary"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>