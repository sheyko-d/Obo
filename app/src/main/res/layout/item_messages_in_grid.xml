<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_lightest"
    android:paddingBottom="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="8dp" >

    <ImageView
        android:id="@+id/messagesAuthorImg"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="3dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/avatar_placeholder" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.moysof.obo.typeface.TextRobotoRegular
            android:id="@+id/messagesAuthorTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="7dp"
            android:includeFontPadding="false"
            android:maxWidth="200dp"
            android:textColor="@color/green"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/msg_in_patch"
                android:orientation="vertical"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp" >

                <com.moysof.obo.typeface.TextRobotoRegular
                    android:id="@+id/messagesTextTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="1dp"
                    android:autoLink="all"
                    android:includeFontPadding="false"
                    android:maxWidth="184dp"
                    android:textColor="@color/gray_primary"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.moysof.obo.typeface.TextRobotoThinItalic
                android:id="@+id/messagesTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:textColor="@color/gray_primary"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>